{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "out",
    "lib": [ "ES2022" ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    /* Additional Checks */
