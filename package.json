{
  "name": "elicode",
  "publisher": "elibarzilay",
  "displayName": "EliCode",
  "description": "Eli's VSCode Hacks",
  "repository": "https://github.com/elibarzilay/elicode/",
  "categories": [ "Other" ],
  "version": "0.0.2",
  "engines": { "vscode": "^1.95.0" },
  "extensionKind": [ "workspace" ],
  "main": "./out/extension.js",
  "files": [ "out/**", "package.json", "README.md", "LICENSE" ],
  "activationEvents": [ "*" ],
  "contributes": {
    "commands": [
      { "command": "elicode.openShell", "title": "elicode: Open Shell" }
    ],
    "keybindings": [
      { "key": "up", "command": "elicode.cursorMove", "args": { "to": "up", "select": false, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "shift+up", "command": "elicode.cursorMove", "args": { "to": "up", "select": true, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "down", "command": "elicode.cursorMove", "args": { "to": "down", "select": false, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "shift+down", "command": "elicode.cursorMove", "args": { "to": "down", "select": true, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "left", "command": "elicode.cursorMove", "args": { "to": "left", "select": false, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "shift+left", "command": "elicode.cursorMove", "args": { "to": "left", "select": true, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "right", "command": "elicode.cursorMove", "args": { "to": "right", "select": false, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "shift+right", "command": "elicode.cursorMove", "args": { "to": "right", "select": true, "by": "wrappedLine" },
        "when": "textInputFocus && !parameterHintsVisible && !suggestWidgetVisible" },
      { "key": "ctrl+`", "command": "elicode.openShell", "args": { "sync": true },
        "when": "!terminalFocus" },
      { "key": "ctrl+`", "command": "elicode.openShell", "args": { "inTerm": true },
        "when": "terminalFocus" },
      { "key": "ctrl+shift+`", "command": "elicode.openShell", "args": { "new": true } },
      { "key": "ctrl+alt+`", "command": "elicode.openShell", "args": { "sync": false },
        "when": "!terminalFocus" },
      { "key": "ctrl+alt+`", "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus" }
    ]
  },
  "scripts": {
    "lint": "eslint --config .eslintrc.js src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --keep-names",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "vscode:prepublish": "npm run typecheck && npm run lint && npm run esbuild-base -- --minify",
    "package": "vsce package --allow-star-activation",
    "package:rm-vsix": "rm -f elicode-*.vsix",
    "package:install": "code --install-extension elicode-$(node -p \"require('./package.json').version\").vsix",
    "package+install": "npm run package:rm-vsix && npm run package && npm run package:install"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.30.0",
    "typescript": "^5.7.2"
  }
}
